{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": ["airbnb", "plugin:flowtype/recommended", "plugin:react/recommended" ],
  "plugins": ["react", "jsx-a11y", "import", "flowtype"],
  "rules": {
    "react/jsx-filename-extension": "off",
    "comma-dangle": "off",
    "quotes": "off"
  },
  "settings": {
    "react": {
      "flowVersion": "0.49.1"
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
